<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" android:layout_height="wrap_content"
	android:orientation="vertical" android:id="@+id/backe_bg1">
	<RelativeLayout android:layout_width="fill_parent"
		android:layout_height="wrap_content" 
		android:orientation="vertical" 
		android:background="@drawable/app_list_corner_round_top_click">

		<TextView android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:textSize="26sp"
			android:textColor="#000000" android:layout_alignParentTop="true"
			android:layout_alignParentLeft="true" android:text="活动时间"
			android:id="@+id/acitvity_store_band_text01" />

		<TextView android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:textSize="20sp"
			android:textColor="#000000" 
			android:layout_alignParentLeft="true" android:text="2012-3-12"
			android:id="@+id/acitvity_store_band_text02" android:layout_below="@id/acitvity_store_band_text01" />
	</RelativeLayout>




	<RelativeLayout android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:id="@+id/image1"
		android:background="@drawable/zh" 
		 >
		 
		 
		<TextView android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:textSize="20sp"
			android:textColor="#000000" android:layout_alignParentTop="true"
			android:layout_alignParentLeft="true" android:text="原价："
			android:id="@+id/acitvity_store_band_text03" />

		<TextView android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:textSize="20sp"
			android:textColor="#000000" 
			android:layout_alignParentLeft="true" android:text="现价"
			android:id="@+id/acitvity_store_band_text04"
			 android:layout_below="@id/acitvity_store_band_text03" />
		 
		 
		 	<TextView android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:textSize="20sp"
			android:textColor="#000000" 
			android:layout_alignParentLeft="true" android:text="规格"
			android:id="@+id/acitvity_store_band_text05" 
			android:layout_below="@id/acitvity_store_band_text04" />
		 
		 
		 <ImageView android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:textSize="20sp"
			android:layout_alignParentTop="true"
			android:layout_alignParentRight="true" 
			android:id="@+id/acitvity_store_band_text05" 
			android:background="@drawable/logo_honglirenqi" />
		 
		 
		 
		 
		 </RelativeLayout>


	<LinearLayout android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:orientation="horizontal"
		android:layout_alignParentBottom="true"
		android:layout_centerHorizontal="true">
		<LinearLayout android:layout_width="fill_parent"
			android:layout_height="wrap_content" android:orientation="vertical"
			android:layout_weight="1" android:background="@drawable/shape_left_bottom">
			<ImageView android:layout_width="fill_parent"
				android:layout_height="wrap_content" android:background="@drawable/a1" />
			<Button android:layout_width="fill_parent"
				android:layout_height="wrap_content" android:id="@+id/btnn01"
				android:text="1000人" 
				android:background="@android:color/transparent"
				android:gravity="center"
				android:textColor="#000000" />
		</LinearLayout>
		<LinearLayout android:layout_width="fill_parent"
			android:layout_height="wrap_content" android:orientation="vertical"
			android:layout_weight="1" android:background="@drawable/shape_rect">

			<ImageView android:layout_width="fill_parent"
				android:layout_height="wrap_content" android:orientation="vertical"
				android:background="@drawable/a2" />
			<Button android:layout_width="fill_parent"
				android:layout_height="wrap_content" android:id="@+id/btnn01"
				android:text="收藏" 
				android:background="@android:color/transparent"
				android:gravity="center"
				android:textColor="#000000" />
		</LinearLayout>
		<LinearLayout android:layout_width="fill_parent"
			android:layout_height="wrap_content" android:orientation="vertical"
			android:layout_weight="1" android:background="@drawable/shape_rect">

			<ImageView android:layout_width="fill_parent"
				android:layout_height="wrap_content" android:background="@drawable/a3" />
			<Button android:layout_width="fill_parent"
				android:layout_height="wrap_content" android:id="@+id/btnn01"
				android:text="分享"
				android:textColor="#000000" 
				android:background="@android:color/transparent" 
				android:gravity="center"/>
		</LinearLayout>
		<LinearLayout android:layout_width="fill_parent"
			android:layout_height="wrap_content" android:orientation="vertical"
			android:layout_weight="1" android:background="@drawable/shape_right_bottom"
			android:id="@+id/btn_more" >
			<ImageView android:layout_width="fill_parent"
				android:layout_height="wrap_content" android:background="@drawable/a4" />
			<Button android:layout_width="fill_parent"
				android:layout_height="wrap_content" android:text="more" 
				android:background="@android:color/transparent"
				android:textColor="#000000" 
				android:gravity="center"/>
		</LinearLayout>

	</LinearLayout>
</LinearLayout>
