<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/background_natrue_01"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" 
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="1dp"
    android:paddingBottom="1dp">
    <TextView android:id="@+id/previousMessage"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textColor="#EEEE00"
        android:text="@string/text"
        android:height="35dp"
        android:padding="1dp"
        />
    <TextView android:id="@+id/message"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:height="35dp"
        android:padding="1dp"
        />
    <TextView android:id="@+id/nextMessage"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textColor="#EEEE00"
        android:height="35dp"
        android:padding="1dp"
        />
    <ImageButton 
        android:contentDescription="@string/cycle"
        android:id="@+id/cycle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="7dp"
        android:src="@drawable/mp3_yellow_round_singlecycle"/>
    <ImageButton 
        android:contentDescription="@string/previous"
        android:id="@+id/previous"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="7dp"
        android:src="@drawable/mp3_yellow_round_previous"/>
    <ImageButton 
        android:contentDescription="@string/pause"
        android:id="@+id/pause"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="7dp"
        android:src="@drawable/mp3_yellow_round_star"/>
    <ImageButton 
        android:contentDescription="@string/next"
        android:id="@+id/next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="7dp"
        android:src="@drawable/mp3_yellow_round_next"/>
    <ImageButton 
        android:contentDescription="@string/sequence"
        android:id="@+id/sequence"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="7dp"
        android:src="@drawable/mp3_yellow_round_random_sequence"/>
</LinearLayout>
