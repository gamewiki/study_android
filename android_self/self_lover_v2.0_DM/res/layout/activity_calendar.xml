<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" 
    android:background="@drawable/cover" >

    <RelativeLayout
        android:id="@+id/calendarMain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/adcontainer"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true" >
        </RelativeLayout>

        <ImageButton
            android:id="@+id/savePerson"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="44.0dp"
            android:background="@drawable/m_bar_save_story"
            android:contentDescription="@string/blueDescription" />
        
	    <TextView
	        android:id="@+id/periodDaysText"
	        style="@style/note_style"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_toRightOf="@id/savePerson"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="44.0dp"
	        android:text="@string/periodDaysText" />
	
	    <TextView
	        android:id="@+id/periodDays"
	        style="@style/note_style"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_toRightOf="@id/periodDaysText"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="44.0dp"
	        android:text="@string/periodDays" />
	    
        <ImageButton
            android:id="@+id/periodThings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="44.0dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/m_bar_waining"
            android:contentDescription="@string/blueDescription" />
	    
	    <TextView
	        android:id="@+id/firstPeriodDay"
	        style="@style/other_note_style"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_below="@id/periodDays"
	        android:layout_centerHorizontal="true"
	        android:text="@string/periodDayText" />
	    
	    <TextView
	        android:id="@+id/calendarCenter"
	        style="@style/main_bar_text_style"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_below="@id/firstPeriodDay"
	        android:textColor="@color/black"
	        android:layout_centerHorizontal="true"/>
	    
	    <ImageButton
	        android:id="@+id/calendarLeft"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_below="@id/firstPeriodDay"
	        android:layout_alignParentLeft="true"
	        android:background="@null"
	        android:contentDescription="@null"
	        android:src="@drawable/calendar_month_left" />
	
	    <ImageButton
	        android:id="@+id/calendarRight"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_below="@id/firstPeriodDay"
	        android:layout_alignParentRight="true"
	        android:background="@null"
	        android:contentDescription="@null"
	        android:src="@drawable/calendar_month_right" />
	
	    <sid.lover.ui.views.CalendarView
	        android:id="@+id/calendar"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_alignParentLeft="true"
	        android:alpha="0.8"
	        android:layout_below="@+id/calendarCenter" />
	
	    <TextView
	        android:id="@+id/periodDaysDes"
	        style="@style/user_inverse_style"
	        android:textColor="@color/yellow"
	        android:paddingTop="3dp"
	        android:layout_below="@id/calendar"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="@string/periodDaysDes" />
	    <TextView
	        android:id="@+id/coldDaysDes"
	        style="@style/user_inverse_style"
	        android:textColor="@color/blue"
	        android:paddingTop="3dp"
	        android:layout_below="@id/periodDaysDes"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="@string/coldDaysDes" />
	    <TextView
	        android:id="@+id/dangerDaysDes"
	        style="@style/user_inverse_style"
	        android:textColor="@color/red"
	        android:paddingTop="3dp"
	        android:layout_below="@id/coldDaysDes"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="@string/dangerDaysDes" />
	    <TextView
	        android:id="@+id/safeDaysDes"
	        style="@style/user_inverse_style"
	        android:textColor="@color/green"
	        android:paddingTop="3dp"
	        android:layout_below="@id/dangerDaysDes"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="@string/safeDaysDes" />
	</RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <View
            android:id="@+id/activity_overlay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <RelativeLayout
            android:id="@+id/composer_buttons_wrapper"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:clipChildren="false"
            android:clipToPadding="false" >

            <ImageButton
                android:id="@+id/composer_button_people"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="142dp"
                android:layout_marginRight="10.667dp"
                android:background="@drawable/composer_with"
                android:visibility="gone" 
                android:contentDescription="@string/app_name"/>

            <ImageButton
                android:id="@+id/composer_period"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="122.975607dp"
                android:layout_marginRight="81.607dp"
                android:background="@drawable/composer_period"
                android:visibility="gone" 
                android:contentDescription="@string/app_name"/>

            <ImageButton
                android:id="@+id/composer_button_thought"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="80.666666666666667dp"
                android:layout_marginRight="124.70765814495902dp"
                android:background="@drawable/composer_thought"
                android:visibility="gone" 
                android:contentDescription="@string/app_name"/>

            <ImageButton
                android:id="@+id/composer_button_photo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="8.666666666666667dp"
                android:layout_marginRight="144dp"
                android:background="@drawable/composer_camera"
                android:visibility="gone" 
                android:contentDescription="@string/app_name"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/composer_buttons_show_hide_button"
            android:layout_width="60dp"
            android:layout_height="57.33333333333333dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:background="@drawable/blue_cricle" >

            <ImageView
                android:id="@+id/composer_buttons_show_hide_button_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@drawable/composer_icn_plus" 
                android:contentDescription="@string/app_name"/>
        </RelativeLayout>
    </RelativeLayout>

    <!-- logo banner -->
    <RelativeLayout
        android:id="@+id/qa_bar"
        android:layout_width="fill_parent"
        android:layout_height="44.0dip"
        android:background="@drawable/m_bar" >
        <ImageView
            android:id="@+id/path_logo"
            style="@style/qa_logo"
            android:layout_centerHorizontal="true" 
                android:contentDescription="@string/app_name"/>
    </RelativeLayout>
</RelativeLayout>