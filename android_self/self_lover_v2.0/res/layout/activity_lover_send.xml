<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <include
        android:id="@+id/include"
        layout="@layout/base_activity" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
	    <ImageButton android:id="@+id/saveLover"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="44.0dp"
	        android:background="@drawable/m_bar_save_story"
	        android:contentDescription="@string/blueDescription"/>
	    
	    <TextView android:id="@+id/blueText"
	        style="@style/other_note_style"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="44.0dp"
	        android:layout_centerHorizontal="true"
	        android:text="@string/aboutText"/>
	    <TextView 
	        android:id="@+id/name"
	        style="@style/user_style"
	        android:layout_below="@id/saveLover" 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="@string/name"/>
	    <TextView 
	        android:id="@+id/nickname"
	        style="@style/user_style"
	        android:layout_below="@id/saveLover" 
	        android:layout_toRightOf="@id/name"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="@string/nickname"/>
	    
	    <TextView 
	        android:id="@+id/sendTime"
	        style="@style/user_style"
	        android:layout_below="@id/nickname" 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="@string/sendTime"/>
	    <TextView 
	        android:id="@+id/time"
	        style="@style/user_style"
	        android:layout_below="@id/nickname" 
	        android:layout_toRightOf="@id/sendTime"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"/>
	
	    <TextView 
	        android:id="@+id/sendContext"
	        style="@style/user_style"
	        android:layout_below="@id/time" 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="@string/sendContext"/>
	    <TextView 
	        android:id="@+id/editdescription"
	        style="@style/user_style"
	        android:layout_below="@id/time" 
	        android:layout_toRightOf="@id/sendContext"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="@string/sendContextError"/>
	    
	    <TextView 
	        android:id="@+id/phone"
	        style="@style/user_style"
	        android:layout_below="@id/sendContext" 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="@string/phone"/>
	    <TextView 
	        android:id="@+id/editphone"
	        style="@style/user_style"
	        android:layout_below="@id/sendContext" 
	        android:layout_toRightOf="@id/phone"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="@string/editphoneError"/>
	    
	    <LinearLayout
	        android:id="@+id/interGELinearLayout"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_alignParentBottom="true"
	        android:gravity="center" />
	</RelativeLayout>


</RelativeLayout>