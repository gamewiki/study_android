<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/cg_backgroud"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <TextView 
        style="@style/cg_user_style"
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/name"/>
    <EditText
        android:id="@+id/cgNameE"
        android:layout_below="@id/name" 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:inputType="text"
        android:singleLine="true"
        android:textSize="18sp" >
    </EditText>
    <TextView 
        android:id="@+id/spinnerText"
        android:layout_below="@id/cgNameE" 
        android:layout_width="fill_parent"
  		android:layout_height="wrap_content"
        android:text="@string/spinnerText"/>
  	<Spinner android:id="@+id/spinner"
        android:layout_below="@id/spinnerText" 
  	    android:layout_width="fill_parent"
  	    android:layout_height="wrap_content"/>
    <TextView 
        android:id="@+id/cgSex"
        style="@style/cg_user_style"
        android:layout_below="@id/spinner" 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sex"/>
    <RadioGroup 
        android:id="@+id/radioGroup"
        android:layout_below="@id/cgSex" 
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <RadioButton 
        	style="@style/cg_user_style"
            android:id="@+id/man"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/man"
            />
        <RadioButton 
        	style="@style/cg_user_style"
            android:id="@+id/woman"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/woman"
            />
    </RadioGroup>
    <Button
        android:id="@+id/cgSubmit"
        android:layout_below="@id/radioGroup" 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
    </Button>

</RelativeLayout>
