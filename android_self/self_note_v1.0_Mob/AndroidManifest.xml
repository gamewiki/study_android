<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="sid.note"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="4"
        android:targetSdkVersion="15" />
    <!-- 增加振动权限 -->
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.DISABLE_KEYGUARD" />
    
    <!-- ModWin广告统计需要的权限 -->
    <!-- 用于连接Internet,拉取广告 -->
    <uses-permission android:name="android.permission.INTERNET" />
    <!-- 用于识别网络接入点等信息,加快获取广告速度 -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <!-- 用于识别WIFI网络等信息,加快获取广告速度 -->
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <!-- 用于精确统计用户手机的系统信息 -->
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <!-- 用于缓存广告对象,节省用户流量,并提高用户体验 -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <!-- 有助于获取投放地域广告,提高广告与用户的相关性,提高广告点击率 -->
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_UPDATES"/>
    <!-- 有助于精准投放地域广告,提高广告与用户的相关性,提高广告点击率
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" /> -->
    <!-- 用于LBS定位需要 
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />-->

    <application
        android:icon="@drawable/noteapp"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >

        <!-- ModWin广告需要的广告基本配置 -->
        <!-- appid
        <meta-data android:name="APP_ID" android:value="8D9438B43600343D737A65FEF7275774" /> -->
        <!-- 广告播放时间(s)
        <meta-data android:name="APP_INTERVAL" android:value="180" /> -->
        <!-- 发布渠道，可选
        <meta-data android:name="APP_CHANNEL" android:value="taobao" /> -->

        <receiver
            android:name=".ClockToRinging"
            android:process=":remote" />

        <activity
            android:name=".NoteActivity"
            android:label="@string/title_activity_note" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".NotesActivity"
            android:label="@string/title_activity_note" >
        </activity>
        <activity
            android:name=".NoteAddActivity"
            android:label="@string/title_activity_note" >
        </activity>
        <activity
            android:name=".ClockActivity"
            android:label="@string/title_activity_note" >
        </activity>
        <activity
            android:name=".ClockAddActivity"
            android:label="@string/title_activity_note" >
        </activity>
        <activity
            android:name="sid.utils.AboutActivity"
            android:label="@string/title_activity_note" >
        </activity>
        <activity
            android:name=".Ringing"
            android:label="@string/app_name" >
        </activity>

        <receiver android:name=".BootReceiver" >
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
        </receiver>
        
        <activity
            android:name="com.qq.e.appwall.AppwallActivity"
            android:configChanges="keyboard|keyboardHidden|orientation"
            android:theme="@android:style/Theme.Light.NoTitleBar" >
		</activity>
		<service android:name="com.qq.e.appwall.AdService" android:exported="false"></service>
		        
        <!-- ModWin广告需要的广告基本配置 -->
		<activity android:name="com.tencent.mobwin.MobinWINBrowserActivity"></activity>
    </application>

</manifest>