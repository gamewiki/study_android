<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="sid.lover"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="4"
        android:targetSdkVersion="15" />
    <supports-screens
        android:smallScreens="true"
        android:normalScreens="true"
        android:largeScreens="true"
        android:anyDensity="true" />
    <!-- 增加振动权限 -->
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.DISABLE_KEYGUARD" />
    <uses-permission android:name="android.permission.SEND_SMS" />
    
    <!-- 第七传媒 -->
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.READ_PHONE_STATE"/>
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.RESTART_PACKAGES"/>

    <application
        android:icon="@drawable/favorite"
        android:label="@string/blueText"
        android:theme="@style/AppTheme" >
        <receiver
            android:name=".days.DaysToRinging"
            android:process=":remote" />
        
        <activity
            android:name=".LoverActivity"
            android:label="@string/title_activity_lover" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="sid.utils.AboutActivity"
            android:label="@string/title_activity_lover" >
        </activity>
        <activity
            android:name=".aboutlover.AboutLoverActivity"
            android:label="@string/title_activity_lover" >
        </activity>
        <activity
            android:name=".aboutlover.ConstellationActivity"
            android:label="@string/title_activity_lover" >
        </activity>
        <activity
            android:name=".story.NoteActivity"
            android:label="@string/title_activity_lover" >
        </activity>
        <activity
            android:name=".story.NoteAdapter"
            android:label="@string/title_activity_lover" >
        </activity>
        <activity
            android:name=".story.NotesActivity"
            android:label="@string/title_activity_lover" >
        </activity>
        <activity
            android:name=".days.DaysActivity"
            android:label="@string/title_activity_lover" >
        </activity>
        <activity
            android:name=".days.DayAddActivity"
            android:label="@string/title_activity_lover" >
        </activity>
        <activity
            android:name=".period.PeriodActivity"
            android:label="@string/title_activity_lover" >
        </activity>
        <activity
            android:name=".period.PeriodThingsActivity"
            android:label="@string/title_activity_lover" >
        </activity>
        <activity
            android:name=".setting.SettingActivity"
            android:label="@string/title_activity_lover" >
        </activity>
        <activity
            android:name=".tools.ToolsActivity"
            android:label="@string/title_activity_lover" >
        </activity>
        <activity
            android:name=".tools.ClockAddActivity"
            android:label="@string/title_activity_lover" >
        </activity>
        <activity
            android:name=".tools.ClockActivity"
            android:label="@string/title_activity_lover" >
        </activity>
        <activity
            android:name=".tools.SendMsgAddActivity"
            android:label="@string/title_activity_lover" >
        </activity>
        <activity
            android:name=".tools.SendMsgActivity"
            android:label="@string/title_activity_lover" >
        </activity>
        <activity
            android:name=".days.Ringing"
            android:label="@string/app_name" >
        </activity>
        <activity android:name=".period.CalendarActivity"
                  android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.PICK" />
                <category android:name="android.intent.category.DEFAULT" />
                <data android:mimeType="vnd.android.cursor.dir/vnd.exina.android.calendar.date" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <data android:mimeType="vnd.android.cursor.dir/vnd.exina.android.calendar.date" />
            </intent-filter>
        </activity>

        <receiver android:name="sid.service.BootReceiver" >
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
        </receiver>
    </application>

</manifest>