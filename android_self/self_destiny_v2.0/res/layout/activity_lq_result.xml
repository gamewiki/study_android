<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/lq_backgroud"
    android:scrollbars="vertical" >
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >
            <TextView
                android:id="@+id/lq_id"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
        		style="@style/lq_result_style"
        		android:text="@string/lq_id"/>
            <TextView
                android:id="@+id/lq_id_des"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
        		style="@style/lq_result_des_style"/>
            <TextView
                android:id="@+id/lq_jixiong"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
        		style="@style/lq_result_style"
        		android:text="@string/lq_jixiong"/>
            <TextView
                android:id="@+id/lq_jixiong_des"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
        		style="@style/lq_result_des_style"/>
            <TextView
                android:id="@+id/lq_gongwei"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
        		style="@style/lq_result_style"
        		android:text="@string/lq_gongwei"/>
            <TextView
                android:id="@+id/lq_gongwei_des"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
        		style="@style/lq_result_des_style"/>
            <TextView
                android:id="@+id/lq_shi"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
        		style="@style/lq_result_style"
        		android:text="@string/lq_shi"/>
            <TextView
                android:id="@+id/lq_shi_des"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
        		style="@style/lq_result_des_style"/>
            <TextView
                android:id="@+id/lq_jieyue"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
        		style="@style/lq_result_style"
        		android:text="@string/lq_jieyue"/>
            <TextView
                android:id="@+id/lq_jieyue_des"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
        		style="@style/lq_result_des_style"/>
            <TextView
                android:id="@+id/lq_xianji"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
        		style="@style/lq_result_style"
        		android:text="@string/lq_xianji"/>
            <TextView
                android:id="@+id/lq_xianji_des"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
        		style="@style/lq_result_des_style"/>
            <TextView
                android:id="@+id/lq_diangu"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
        		style="@style/lq_result_style"
        		android:text="@string/lq_diangu"/>
            <TextView
                android:id="@+id/lq_diangu_des"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
        		style="@style/lq_result_des_style"/>

            <ImageButton
                android:id="@+id/lq_shareButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:contentDescription="@string/share" />
        </LinearLayout>
</ScrollView>