<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/adsList"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content" >

    <LinearLayout
        android:id="@+id/gelistmessageLinear"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dip"
        android:layout_marginRight="5dip"
        android:layout_marginTop="5dip"
        android:background="@drawable/mobile7_ge_list_bg"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/gelistmessageIcon"
            android:layout_width="48dip"
            android:layout_height="48dip"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="8dip"
            android:contentDescription="@string/geContentDes"
            android:scaleType="fitCenter" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dip"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <Button
                    android:id="@+id/gelistmessageDownButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="5dip"
                    android:background="@drawable/mobile7_ge_down_style"
                    android:padding="10dip"
                    android:textColor="#885a01"
                    android:textSize="15dip" />

                <TextView
                    android:id="@+id/gelistmessageName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@id/gelistmessageDownButton"
                    android:singleLine="true"
                    android:textColor="#555555"
                    android:textSize="17dip" />
            </RelativeLayout>

            <TextView
                android:id="@+id/gelistmessageComm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:textColor="#999999" />
        </LinearLayout>
    </LinearLayout>
    
    <ImageView 
        android:layout_width="fill_parent"
        android:layout_height="2dip"
        android:layout_below="@id/gelistmessageLinear"
        android:src="@android:color/transparent"
        />

</RelativeLayout>