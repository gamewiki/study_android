<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/welcomLove"
    android:background="@drawable/background1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >
    
    <ImageView android:id="@+id/blue"
        android:layout_alignParentTop="true"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/blue_background"
        android:contentDescription="@string/blueDescription"/>
    
    <TextView android:id="@+id/blueText"
        style="@style/note_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:layout_centerHorizontal="true"
        android:text="@string/aboutText"/>
    
    <ImageButton android:id="@+id/saveLover"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/aboutlover_save_selector"
        android:layout_toLeftOf="@id/blueText"
        android:layout_marginTop="10dp"
        android:layout_marginRight="60dp"
        android:contentDescription="@string/blueDescription"/>

    
    <TextView 
        android:id="@+id/name"
        style="@style/user_style"
        android:layout_below="@id/blue" 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/name"/>
    <TextView 
        android:id="@+id/nickname"
        style="@style/user_style"
        android:layout_below="@id/blue" 
        android:layout_toRightOf="@id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/nickname"/>
    
    <TextView 
        android:id="@+id/sendTime"
        style="@style/user_style"
        android:layout_below="@id/nickname" 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sendTime"/>
    <TextView 
        android:id="@+id/time"
        style="@style/user_style"
        android:layout_below="@id/nickname" 
        android:layout_toRightOf="@id/sendTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView 
        android:id="@+id/sendContext"
        style="@style/user_style"
        android:layout_below="@id/time" 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sendContext"/>
    <TextView 
        android:id="@+id/editdescription"
        style="@style/user_style"
        android:layout_below="@id/time" 
        android:layout_toRightOf="@id/sendContext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sendContextError"/>
    
    <TextView 
        android:id="@+id/phone"
        style="@style/user_style"
        android:layout_below="@id/sendContext" 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/phone"/>
    <TextView 
        android:id="@+id/editphone"
        style="@style/user_style"
        android:layout_below="@id/sendContext" 
        android:layout_toRightOf="@id/phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/editphoneError"/>
    
    <LinearLayout
        android:id="@+id/interGELinearLayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center" />
</RelativeLayout>
