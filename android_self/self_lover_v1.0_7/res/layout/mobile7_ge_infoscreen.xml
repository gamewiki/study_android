<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/ge_info_head" >

        <!-- 免费下载按钮 -->

        <Button
            android:id="@+id/geInfoScreenButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dip"
            android:background="@drawable/mobile7_ge_info_down_style"
            android:padding="5dip"
            android:text="@string/geInfoBtnText"
            android:textColor="#555555"
            android:textSize="17dip" />

        <!-- 图标 -->

        <ImageView
            android:id="@+id/geInfoScreenIcon"
            android:layout_width="60dip"
            android:layout_height="60dip"
            android:layout_marginTop="10dip"
            android:layout_marginBottom="10dip"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dip"
            android:contentDescription="@string/geContentDes" >
        </ImageView>

        <!-- 应用名 -->

        <TextView
            android:id="@+id/geInfoScreenName"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@id/geInfoScreenIcon"
            android:layout_toLeftOf="@id/geInfoScreenButton"
            android:layout_marginTop="10dip"
            android:layout_marginLeft="5dip"
            android:layout_marginRight="5dip"
            android:ellipsize="marquee" 
	        android:focusable="true" 
	        android:singleLine="true"
	        android:marqueeRepeatLimit="marquee_forever" 
	        android:focusableInTouchMode="true" 
	        android:scrollHorizontally="true"
            android:textColor="#ffffff"
            android:textSize="20dip" >
        </TextView>

        <!-- 版本 -->

        <!--  <TextView
            android:id="@+id/geInfoScreenVersion"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/geInfoScreenName"
            android:layout_marginLeft="5dip"
            android:layout_toLeftOf="@id/geInfoScreenButton"
            android:layout_toRightOf="@id/geInfoScreenName"
            android:singleLine="true"
            android:textColor="#ffffff"
            android:textSize="20dip" >
        </TextView>-->

        <!-- 大小 -->

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/geInfoScreenName"
            android:layout_toRightOf="@id/geInfoScreenIcon"
            android:layout_marginTop="2dip"
            android:layout_marginBottom="5dip"
            android:layout_marginLeft="5dip"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/geInfoVolText"
                android:textColor="#ffffff"
                android:textSize="15dip" />

            <TextView
                android:id="@+id/geInfoScreenSize"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ffffff"
                android:textSize="15dip" />
        </LinearLayout>
    </RelativeLayout>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#fefefe" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <!-- 一句话评论 -->

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/geInfoScreenTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dip"
                    android:layout_marginLeft="10dip"
                    android:layout_marginTop="10dip"
                    android:gravity="center"
                    android:textColor="#888888" >
                </TextView>
            </LinearLayout>

            <!-- 内容简介 -->

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="#d6d6d6"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="5dip"
                    android:layout_marginTop="5dip"
                    android:gravity="center"
                    android:text="@string/geInfoDesc"
                    android:textColor="#555555"
                    android:textSize="17dip" >
                </TextView>
            </LinearLayout>

            <!-- 介绍 -->

            <TextView
                android:id="@+id/geInfoScreenDescription"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dip"
                android:layout_marginLeft="10dip"
                android:layout_marginRight="10dip"
                android:layout_marginTop="10dip"
                android:textColor="#888888" />

            <!-- 截图 -->

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="#d6d6d6"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="5dip"
                    android:layout_marginTop="5dip"
                    android:gravity="center"
                    android:text="@string/geInfoPic"
                    android:textColor="#555555"
                    android:textSize="17dip" >
                </TextView>
            </LinearLayout>

            <!-- 竖屏截图 -->

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/geInfoHorizontalImage1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dip"
                    android:layout_marginRight="10dip"
                    android:layout_marginTop="10dip"
                    android:layout_marginBottom="10dip"
                    android:visibility="gone"
                    android:layout_weight="1"
                    android:contentDescription="@string/geContentDes" />

                <ImageView
                    android:id="@+id/geInfoHorizontalImage2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dip"
                    android:layout_marginTop="10dip"
                    android:layout_marginBottom="10dip"
                    android:visibility="gone"
                    android:layout_weight="1"
                    android:contentDescription="@string/geContentDes" />
            </LinearLayout>

            <!-- 横屏截图 -->

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/geInfoVerticalImage1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="10dip"
	                android:layout_marginRight="10dip"
	                android:layout_marginTop="10dip"
                    android:visibility="gone"
                    android:layout_weight="1"
                    android:contentDescription="@string/geContentDes" />

                <ImageView
                    android:id="@+id/geInfoVerticalImage2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="10dip"
	                android:layout_marginRight="10dip"
	                android:layout_marginTop="10dip"
	                android:layout_marginBottom="10dip"
                    android:visibility="gone"
                    android:layout_weight="1"
                    android:contentDescription="@string/geContentDes" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>